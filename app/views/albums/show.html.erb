<h1><%= @album.name  %> by <%= @album.band.name %> </h1>
  <ul>
    <% @album.tracks.each do |track|%>
      <li> <a href="<%= track_url(track) %>"><%= track.name %></a>
    <% end %>
  <ul>

  <%= button_to "Add an track to this album", new_album_track_url(@album), method: :get %>
  <%= button_to "Back to #{@album.band.name}", band_url(@album.band), method: :get %>
  <%= button_to "Edit this album", edit_album_url, method: :get %>
  <%= button_to "Delete this album", album_url, method: :delete %>
